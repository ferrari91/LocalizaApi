@model Localiza.Web.Views.Acesso.IndexModel

@{
    ViewData["Title"] = "Acesso";
}

 <h1 class="display-4">Acesso</h1>

<div >
    <div >
        <form asp-action="Acessar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-1">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
             <div class="form-group m-1">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" type="password" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Acessar" class="btn btn-success  m-1" />
                </div>

            </div>
        </form>
    </div>
</div>