@model IEnumerable<Localiza.Data.Models.TabVeiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combustivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimitePortaMala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoMarcaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Combustivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LimitePortaMala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @{var marcaModelo = item.CodigoMarcaNavigation.Marca + "-" + item.CodigoMarcaNavigation.Modelo; }
                @Html.DisplayFor(
                    modelItem =>
                    marcaModelo
                )
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVeiculo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdVeiculo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVeiculo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
